% layout 'default';
% title 'Posts';

<h2 class="h1">Posts</h2>

<div class="article-list">
% for my $p ( @$posts ) {
  <div class="blog-post">
    <h2 class="blog-post-title"><small><%= $p->{date} %></small>
      <a href="<%= url_for post => post => $p->{post} %>"
        ><%= $p->{title} %></a></h2>
  </div>
% }
</div>